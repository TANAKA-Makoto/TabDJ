{
    "name": "TabDJ",
    "version": "0.1",
    "short_name": "TabDJ",
    "description": "Per-tab stereo audio panning (balance) and volume. Simple DJ app, send one channel to speakers while previewing on another.",
	"permissions": ["tabCapture", "activeTab", "tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
		"default_title": "TabDJ",
        "default_icon": "icon.png",
		"default_popup": "popup.html"
    },
    "icons": {
        "128": "icon.png"
    },
    "manifest_version": 2
}